<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pembayaran">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="419dp"
        android:layout_height="65dp"
        app:cardBackgroundColor="#e85d04"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:text="PEMBAYARAN PESANAN"
            android:textColor="#EEFFFFFF"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="66dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:onClick="setkembali"
            android:background="#e85d04"

            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="156dp"
        android:layout_height="138dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        app:cardBackgroundColor="#F8ECE8E8"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ayam" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="196dp"
        android:layout_height="135dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView5"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nasi,Ayam,Sambal,              Esteh"
                android:textAllCaps="false"
                android:textColor="#0C0B0B"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Rp.20.000"
                android:textColor="#120D0D"
                android:textSize="20dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paket 1"
            android:textColor="#0B0A0A"
            android:textSize="20dp"
            android:textStyle="bold|italic" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="158dp"
        android:layout_height="124dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ayam" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="181dp"
        android:layout_height="125dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toEndOf="@+id/cardView6"
        app:layout_constraintTop_toBottomOf="@+id/cardView7">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paket 2"
            android:textColor="#0B0A0A"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Nasi,Ayam,Sambal,   Esteh,Tempe,Lalapan"
            android:textColor="#0C0C0C"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Rp.20.000"
            android:textColor="#070606"
            android:textSize="20dp"
            android:textStyle="bold|italic" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="364dp"
        android:layout_height="136dp"
        android:layout_marginTop="1dp"
        app:cardBackgroundColor="#e85d04"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="Detail Pemesanan"
            android:textAlignment="center"
            android:textColor="#EBFFFFFF"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Jumlah Pemesanan"
            android:textColor="#A4FFFFFF"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Total Pembayaran"
            android:textColor="#DDFFFFFF"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtJumTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:text="0"
            android:textColor="#EEFFFFFF"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtJumBayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="45dp"
            android:text="0"
            android:textColor="#E2FFFFFF"
            android:textSize="18dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button"
            android:layout_width="340dp"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="#A31A1A"
            android:text="BAYAR DAN CETAK STRUK"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Jumlah paket pesan1"
            android:textColor="#0B0909"
            android:textSize="18dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btnMinusP1"
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:onClick="setMin1"
            android:backgroundTint="#e85d04"
            android:text="-"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/txtJumP1"
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#070606"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPlusP1"
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:onClick="setplus1"
            android:backgroundTint="#e85d04"
            android:text="+"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView6">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Jumlah paket pesan2"
            android:textColor="#120F0F"
            android:textSize="18dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btnMinusP2"
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:onClick="setMin2"

            android:backgroundTint="#e85d04"
            android:text="-"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/txtJumP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#0B0909"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPlusP2"
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:onClick="setplus2"
            android:backgroundTint="#e85d04"
            android:text="+"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>